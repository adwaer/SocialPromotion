include ..\mixins

form.form-horizontal(ng-submit="submit()" name="form" ng-class="{ loading: isLoading }")
    +loader
    .modal-header
        h3.modal-title Восстановление пароля
    .modal-body
        .alert.alert-danger(role="alert" ng-show="Error")
            a.alert-link {{Error}}

        .form-group
            label.col-sm-2.control-label Пароль
            .col-sm-10
                input.form-control(type="password" placeholder="Введите новый пароль" ng-model="pwd" required minlength="8")
    .modal-footer
        button.btn.btn-primary(type="submit") Ok